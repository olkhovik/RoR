<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>


<% if current_user && current_user.admin? %>
    <%= link_to 'Edit Category', edit_admin_category_path(@category) %> |
    <%= link_to 'Delete Category', [:admin, @category], method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to 'All Categories', admin_categories_path %>
<% end %>
